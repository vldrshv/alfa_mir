<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <ImageView
        android:id="@+id/backdrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/cutie"
        />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#51000000"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="32dp"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:fontFamily="sans-serif-medium"
            android:textStyle="normal"
            android:textColor="#ffffff"
            android:letterSpacing="-0.02"
            android:lineSpacingExtra="8sp"
            android:layout_gravity="center_horizontal"
            tools:text="Альфа для тебя"
            android:layout_marginBottom="14dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#ffffff"
            android:letterSpacing="-0.01"
            android:lineSpacingExtra="6sp"
            android:gravity="center_horizontal"
            tools:text="Скидки, акции, специальные предложения для сотрудников банка"
            android:layout_marginBottom="18dp"
            />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_subscribe"
            android:layout_gravity="center"
            >

            <!--<ImageView-->
                <!--android:layout_width="130dp"-->
                <!--android:layout_height="30dp"-->
                <!--android:src="@drawable/background_subscribe"-->
                <!--/>-->

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif"
                    android:textStyle="normal"
                    android:textColor="#ffffff"
                    android:letterSpacing="-0.01"
                    android:lineSpacingExtra="8sp"
                    tools:text="Вы подписаны"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:paddingRight="24dp"
                    android:paddingLeft="24dp"
                    />

                <FrameLayout
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#52ffffff"
                    />

                <FrameLayout
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_arrow_suggestions"/>

                </FrameLayout>

            </LinearLayout>

        </FrameLayout>

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        app:layout_collapseMode="parallax"

        >
        <!--<ImageView-->
            <!--android:id="@+id/backdrop"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="360dp"-->
            <!--android:scaleType="centerCrop"-->
            <!--android:src="@drawable/cutie"-->
            <!--/>-->

        <!--<TextView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="HAHAHA"-->
            <!--android:layout_gravity="center"/>-->

    </FrameLayout>

</FrameLayout>