<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="132dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="29dp"
            android:background="#efeff4">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="12dp"
                android:fontFamily="sans-serif-light"
                android:gravity="center_vertical"
                android:letterSpacing="-0.01"
                android:text="РУКОВОДИТЕЛЬ"
                android:textColor="#6d6d72"
                android:textSize="14sp"
                android:textStyle="normal" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/borders_questionable" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="71dp"
        android:orientation="horizontal"
        android:paddingBottom="0dp"
        android:gravity="center_vertical">

        <FrameLayout
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginLeft="12dp">
            <ImageView
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:id="@+id/item_favorites_image_profile_icon"
                android:scaleType="centerCrop"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17dp"
                android:textColor="@android:color/white"
                android:layout_gravity="center"
                android:id="@+id/item_favorites_tv_profile_initials"/>
        </FrameLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Авдуевский Михаил Сергеевич"
                android:textSize="18sp"
                android:fontFamily="sans-serif-light"
                android:textStyle="normal"
                android:textColor="#030303"
                android:letterSpacing="-0.02"
                android:ellipsize="end"
                android:maxLines="1"
                android:id="@+id/item_favorites_name"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Старший системный аналитик"
                android:textSize="14sp"
                android:fontFamily="sans-serif-light"
                android:textStyle="normal"
                android:textColor="#6d6d72"
                android:letterSpacing="-0.02"
                android:ellipsize="end"
                android:maxLines="1"
                android:id="@+id/item_favorites_position"/>

        </LinearLayout>

        <FrameLayout
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:id="@+id/item_favorites_fl_caret">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_caret_right"
                android:layout_gravity="center"/>

        </FrameLayout>

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/borders_questionable" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="29dp"
            android:background="#efeff4">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="14sp"
                android:fontFamily="sans-serif-light"
                android:textStyle="normal"
                android:textColor="#6d6d72"
                android:letterSpacing="-0.01"
                android:text="КОМАНДА"
                android:layout_marginLeft="12dp"
                android:gravity="center_vertical"/>

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/borders_questionable" />

    </LinearLayout>

</LinearLayout>