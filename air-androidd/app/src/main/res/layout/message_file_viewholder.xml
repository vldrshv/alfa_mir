<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/message_vh_layout"
        android:layout_width="fill_parent"
        android:elevation="1dp"
        android:background="@drawable/background_profile_field"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/icon_container"
            android:layout_width="48dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:layout_height="48dp"
            app:cardBackgroundColor="#1875f0"
            app:cardCornerRadius="24dp"
            app:cardElevation="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/file_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:src="@drawable/icn_file_24x24" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/file_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginTop="12dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="12dp"
            android:textColor="#1875f0"
            android:lineSpacingExtra="8sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:gravity="start"
            app:layout_constrainedWidth="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/icon_container"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Название документа" />

        <TextView
            android:id="@+id/size_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#858585"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="12dp"
            android:lineSpacingExtra="8sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/icon_container"
            tools:text="1.4 MB DOCX" />

        <FrameLayout
            android:id="@+id/more_button"
            android:layout_width="24dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="2dp"
            android:layout_height="24dp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:layout_gravity="center"
                android:tint="#858585"
                android:src="@drawable/icn_more_ver_24_x_24" />

        </FrameLayout>

        <include
            android:id="@+id/date_status_container"
            layout="@layout/messenger_date_status_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>