<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:paddingBottom="16dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="16dp"
            android:gravity="center">

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:id="@+id/rc_news_item_post_header_image_profile_icon"
                android:scaleType="centerCrop"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17dp"
                android:textColor="@android:color/white"
                android:layout_gravity="center"
                android:id="@+id/rc_news_item_post_header_tv_profile_initials"/>

        </FrameLayout>

        <LinearLayout
            android:id="@+id/rc_news_item_post_header_ll_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="vertical"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="12dp"
            android:layout_marginEnd="12dp">

            <TextView
                android:id="@+id/rc_news_item_post_header_item_tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="8dp"
                android:textSize="14sp"
                android:fontFamily="sans-serif-light"
                android:textStyle="normal"
                android:textColor="#6d6d72"
                android:letterSpacing="-0.01"
                android:lineSpacingExtra="4sp"
                tools:text="Дружков Дмитрий Владимирович"/>

            <TextView
                android:id="@+id/rc_news_item_post_header_item_tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:fontFamily="sans-serif-light"
                android:textStyle="normal"
                android:textColor="#6d6d72"
                android:letterSpacing="-0.01"
                android:layout_marginTop="0dp"
                android:lineSpacingExtra="14sp"
                tools:text="26 июля 2017 г."/>

        </LinearLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/rc_news_item_post_header_image_options"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:padding="12dp"
            android:src="@drawable/ic_more"
            android:tint="@color/background_grey_dark"
            android:visibility="visible"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginTop="10dp"
        android:paddingRight="8dp"
        android:orientation="horizontal"
        android:id="@+id/view_holder_post_header_ll_heading"
        android:visibility="visible">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_tag"
            android:layout_marginLeft="12dp"
            android:layout_gravity="center_vertical"
            />
        <TextView
            android:id="@+id/rc_news_item_post_header_tv_heading_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textSize="14sp"
            android:layout_marginLeft="8dp"
            android:fontFamily="sans-serif-light"
            android:textStyle="normal"
            android:textColor="#ff9500"
            android:gravity="center_horizontal"
            tools:text="Новости подразделений"
            android:ellipsize="end"
            android:maxLines="1"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:fontFamily="sans-serif-medium"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="8dp"
        tools:text="Я люблю Александра Сергеевича!"
        android:letterSpacing="-0.01"
        android:lineSpacingExtra="8dp"
        android:id="@+id/rc_news_item_post_header_tv_news_item_title"
        android:textColor="#000000"/>

</LinearLayout>