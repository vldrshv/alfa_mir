<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="102dp"
    android:id="@+id/rc_item_favorite_ll_favorite"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="71dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="0dp">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/rc_item_favorite_tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="Сохраненные статьи"
                android:textSize="18sp"
                android:fontFamily="sans-serif-light"
                android:textStyle="normal"
                android:textColor="#030303"
                android:letterSpacing="-0.02"
                android:lineSpacingExtra="6sp" />

            <TextView
                android:id="@+id/rc_item_favorite_tv_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Их колличество"
                android:textSize="14sp"
                android:fontFamily="sans-serif-light"
                android:textStyle="normal"
                android:textColor="#6d6d72"
                android:letterSpacing="-0.02"
                android:lineSpacingExtra="2sp"/>

        </LinearLayout>

        <FrameLayout
            android:id="@+id/rc_item_favorite_fl_caret"
            android:layout_width="34dp"
            android:layout_height="34dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_caret_right" />

        </FrameLayout>

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/borders_questionable" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="29dp"
            android:background="#efeff4">

            <TextView
                android:id="@+id/header_search_result_tv_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="14sp"
                android:fontFamily="sans-serif-light"
                android:textStyle="normal"
                android:textColor="#6d6d72"
                android:letterSpacing="-0.01"
                android:text="КОЛЛЕГИ"
                android:layout_marginLeft="12dp"
                android:gravity="center_vertical"/>

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/borders_questionable" />

    </LinearLayout>

</LinearLayout>