<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="104dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#FFFFFF"
    android:paddingLeft="12dp"
    android:id="@+id/favorite_post_viewholder_rl_main"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/favorite_post_viewholder_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="8dp"
        android:visibility="visible"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/favorite_post_viewholder_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#292929"
            android:lineSpacingExtra="8sp"
            tools:text="В каждой стране есть нечто, что брasdasdasdasdосает вызов, застав..."
            android:maxLines="2"
            android:ellipsize="end"
            />

        <TextView
            android:id="@+id/favorite_post_viewholder_tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#858585"
            android:lineSpacingExtra="8sp"
            tools:text="4 сентября 2018"
            android:layout_marginTop="8dp"
            />

    </LinearLayout>

    <FrameLayout
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="center">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_caret_right"
            android:tint="#858585"
            android:layout_gravity="center"/>
    </FrameLayout>


</LinearLayout>