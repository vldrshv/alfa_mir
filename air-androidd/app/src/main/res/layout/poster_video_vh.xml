<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/show_activity_fl_password_screen"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <com.google.android.exoplayer2.ui.PlayerView
        android:id="@+id/player"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:visibility="gone"
        app:controller_layout_id="@layout/playback_control" />

    <FrameLayout
        android:id="@+id/placeholder_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible">


        <ImageView
            android:id="@+id/video_placeholder"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="#000000"
            android:scaleType="centerCrop"
            android:visibility="visible" />

        <TextView
            android:id="@+id/video_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:layout_marginBottom="48dp"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="8sp"
            android:text="@string/video_placeholder_text"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_marginTop="160dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginStart="35dp"
                android:src="@drawable/icn_calendar_24_x_24" />

            <TextView
                android:id="@+id/video_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="9dp"
                android:lineSpacingExtra="8sp"
                android:textColor="#ffffff"
                android:textSize="16sp"
                tools:text="18 февраля" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/icn_clock_24_x_24" />

            <TextView
                android:id="@+id/video_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="34dp"
                android:lineSpacingExtra="8sp"
                android:textColor="#ffffff"
                android:textSize="16sp"
                tools:text="09:00 — 11:10" />
        </LinearLayout>
    </FrameLayout>


    <LinearLayout
        android:id="@+id/show_activity_ll_password_screen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="#efeff4"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/show_activity_tv_upper_prompt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:gravity="center_horizontal"
            android:letterSpacing="-0.02"
            android:text="Чтобы смотреть, введите код"
            android:textColor="#030303"
            android:textSize="17sp"
            android:textStyle="normal" />

        <LinearLayout
            android:id="@+id/show_activity_ll_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/show_activity_image_lock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_lock" />

            <FrameLayout
                android:id="@+id/show_activity_fl_password"
                android:layout_width="112dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:background="@drawable/background_enter_password">

                <ru.alfabank.alfamir.ui.custom_views.PasswordEditText
                    android:id="@+id/show_activity_et_password"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:backgroundTint="@android:color/transparent"
                    android:cursorVisible="false"
                    android:focusedByDefault="false"
                    android:fontFamily="sans-serif"

                    android:inputType="number"
                    android:letterSpacing="0.5"
                    android:maxLength="4"
                    android:maxLines="1"

                    android:paddingLeft="4dp"
                    android:paddingTop="0dp"
                    android:paddingRight="0dp"
                    android:paddingBottom="0dp"

                    android:textColor="#030303"
                    android:textSize="24sp"
                    android:textStyle="normal" />
            </FrameLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/show_activity_tv_bottom_prompt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="sans-serif-light"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="2sp"
            android:text="Узнайте код у организатора"
            android:textColor="#8e8e93"
            android:textSize="14sp"
            android:textStyle="normal" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/show_activity_ll_show_later"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#333333"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/show_activity_tv_middle_prompt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:letterSpacing="-0.02"
            android:text="Трансляция начнется позже"
            android:textColor="#ffffff"
            android:textSize="17sp"
            android:textStyle="normal"
            android:visibility="visible" />
    </LinearLayout>

</FrameLayout>