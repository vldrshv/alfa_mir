<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        android:background="#103058"
        android:elevation="12dp"
        android:id="@+id/activity_favorites_pages_toolbar"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:orientation="horizontal"
            android:paddingRight="8dp"
            android:paddingEnd="8dp"
            android:id="@+id/activity_address_ll_back">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_back_caret"
                android:layout_gravity="center"
                android:layout_marginStart="12dp"
                android:layout_marginLeft="12dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:fontFamily="sans-serif-light"
                android:gravity="center"
                android:letterSpacing="-0.02"
                android:text="Назад"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:textStyle="normal"

                />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Адрес офиса"
            android:textSize="18sp"
            android:fontFamily="sans-serif-light"
            android:textStyle="normal"
            android:textColor="#ffffff"
            android:letterSpacing="-0.02"
            android:layout_gravity="center" />

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/activity_address_ll_container_physical_address">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:fontFamily="sans-serif-light"
            android:textStyle="normal"
            android:textColor="#999999"
            android:layout_marginRight="12dp"
            android:layout_marginLeft="12dp"
            android:lineSpacingExtra="2sp"
            android:layout_marginTop="16dp"
            android:text="Адрес" />

        <TextView
            android:id="@+id/activity_address_tv_physical_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:fontFamily="sans-serif-light"
            android:textStyle="normal"
            android:textColor="#de000000"
            android:lineSpacingExtra="6sp"
            tools:text="115432, Москва, Проспект Андропова, 18 корпус 3"
            android:layout_marginRight="12dp"
            android:layout_marginLeft="12dp"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:backgroundTint="#e4e4e4" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/activity_address_ll_container_work_space_full">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:fontFamily="sans-serif-light"
            android:textStyle="normal"
            android:textColor="#999999"
            android:lineSpacingExtra="2sp"
            android:layout_marginRight="12dp"
            android:layout_marginLeft="12dp"
            android:text="Расположение рабочего места" />

        <TextView
            android:id="@+id/activity_address_tv_work_space_full"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:fontFamily="sans-serif-light"
            android:textStyle="normal"
            android:textColor="#de000000"
            android:lineSpacingExtra="6sp"
            android:layout_marginRight="12dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="16dp"
            tools:text="МОСКВА &gt; ВЫНЕСЕННЫЕ ОФИСЫ &gt; НАГАТИНО &gt; НГ &gt; НГ-729 &gt; НГ-729-103" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/activity_address_ll_container_work_space_short">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:fontFamily="sans-serif-light"
            android:textStyle="normal"
            android:textColor="#999999"
            android:layout_marginRight="12dp"
            android:layout_marginLeft="12dp"
            android:lineSpacingExtra="2sp"
            android:layout_marginTop="16dp"
            android:text="Офис" />

        <TextView
            android:id="@+id/activity_address_tv_work_space_short"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginRight="12dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="8dp"
            android:fontFamily="sans-serif-light"
            android:textStyle="normal"
            android:textColor="#de000000"
            android:lineSpacingExtra="6sp"
            tools:text="НГ-729-103" />
    </LinearLayout>
</LinearLayout>