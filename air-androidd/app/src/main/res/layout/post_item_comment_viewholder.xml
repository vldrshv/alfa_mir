<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_comment"
    android:id="@+id/view_holder_comment_ll_base">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp">

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:id="@+id/view_holder_comment_image_profile"
                android:scaleType="centerCrop"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17dp"
                android:textColor="@android:color/white"
                android:layout_gravity="center"
                android:id="@+id/view_holder_comment_tv_author_initials"/>

        </FrameLayout>

        <LinearLayout
            android:id="@+id/view_holder_comment_ll_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="vertical"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginEnd="8dp">

            <TextView
                android:id="@+id/view_holder_comment_tv_author_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:fontFamily="sans-serif-light"
                android:textStyle="normal"
                android:textColor="#6d6d72"
                android:letterSpacing="-0.01"
                android:maxLines="1"
                android:text="Дружков Дмитрий Владимирович"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/view_holder_comment_tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif-light"
                    android:textStyle="normal"
                    android:textColor="#6d6d72"
                    android:letterSpacing="-0.01"
                    android:layout_marginTop="2dp"
                    android:text="26 июля 2017 г"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="#030303"
        android:letterSpacing="-0.02"
        android:lineSpacingExtra="8sp"
        android:paddingLeft="10dp"
        android:paddingRight="7dp"
        android:layout_marginTop="9dp"
        android:textAppearance="@style/OpenSans.Regular"
        android:id="@+id/view_holder_comment_tv_body"
        android:autoLink="web"
        tools:text="Thanks"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal"
        android:paddingLeft="9dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingRight="12dp"
            android:paddingLeft="7dp"
            android:text="Ответить"
            android:textSize="14sp"
            android:fontFamily="sans-serif-light"
            android:textStyle="normal"
            android:textColor="#0076ff"
            android:letterSpacing="-0.01"
            android:gravity="center"
            android:id="@+id/view_holder_comment_tv_reply"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingRight="12dp"
            android:paddingLeft="12dp"
            android:text="Удалить"
            android:textSize="14sp"
            android:fontFamily="sans-serif-light"
            android:textStyle="normal"
            android:textColor="#e53935"
            android:letterSpacing="-0.01"
            android:gravity="center"
            android:id="@+id/view_holder_comment_tv_delete"/>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:paddingRight="7dp"
            android:paddingLeft="7dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:id="@+id/view_holder_comment_ll_like">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_facebook_like"
                android:id="@+id/view_holder_comment_image_like"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="0dp"
                android:textSize="14sp"
                android:fontFamily="sans-serif-light"
                android:textStyle="normal"
                android:textColor="#0076ff"
                android:id="@+id/view_holder_comment_tv_likes_count"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>