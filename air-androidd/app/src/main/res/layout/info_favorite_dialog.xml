<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/background_dialog_fragment_basic"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal"
    android:padding="24dp"
    android:minWidth="336dp"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:fontFamily="sans-serif-medium"
        android:textStyle="normal"
        android:textColor="#333333"
        android:text="Добавляйте коллег в избранное"
        android:layout_gravity="center_horizontal"
        android:maxLines="1"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:fontFamily="sans-serif-light"
        android:textStyle="normal"
        android:textColor="#6d6d72"
        android:lineSpacingExtra="8sp"
        android:text="@string/info_favorite_dialog"
        android:layout_marginTop="8dp"
        android:gravity="center_horizontal"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="32dp"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_info_favorites"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/info_favorite_dialog_pic"
            />

    </LinearLayout>


    <TextView
        android:id="@+id/info_favorite_dialog_tv_ok"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="Oк"
        android:gravity="center"
        android:background="@drawable/background_curved_corners_blue_filled"
        android:textColor="#ffffff"
        />

</LinearLayout>