<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/splatoon2">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/human_desk_image"
        android:scaleType="centerCrop" />

    <FrameLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#51000000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingBottom="32dp">

        <TextView
            android:id="@+id/human_desk_tv_text_1"
            android:layout_marginTop="44dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:fontFamily="sans-serif-medium"
            android:textStyle="normal"
            android:textColor="#ffffff"
            android:lineSpacingExtra="16sp"
            android:layout_centerHorizontal="true"
            android:text="Help Desk" />

        <TextView
            android:id="@+id/human_desk_tv_text_2"
            android:layout_marginTop="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:fontFamily="sans-serif-light"
            android:textStyle="normal"
            android:textColor="#e1ffffff"
            android:lineSpacingExtra="16sp"
            android:gravity="center_horizontal"
            android:text="IT-поддержка"
            android:layout_below="@id/human_desk_tv_text_1"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/human_desk_tv_text_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#ffffff"
            android:lineSpacingExtra="8sp"
            android:gravity="center_horizontal"
            android:text="Решаем любые вопросы по работе
с техникой — принтер, компьютер, установка программ."
            android:layout_marginTop="16dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_below="@id/human_desk_tv_text_2" />

        <ImageView
            android:id="@+id/human_desk_image_call"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_below="@id/human_desk_tv_text_3"
            android:src="@drawable/ic_phone_with_circle"
            android:layout_centerHorizontal="true"
            android:tint="@android:color/white"
            android:layout_marginTop="32dp" />

    </LinearLayout>

</FrameLayout>