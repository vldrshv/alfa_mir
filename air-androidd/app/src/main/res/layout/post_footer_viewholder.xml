<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:background="@color/news_item_bottom"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:paddingRight="16dp"
            android:paddingLeft="16dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:id="@+id/view_holder_footer_ll_like">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_facebook_like"
                android:id="@+id/view_holder_footer_image_like"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="243"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="1dp"
                android:textColor="#0076ff"
                android:textSize="14dp"
                android:fontFamily="sans-serif-light"
                android:id="@+id/view_holder_footer_tv_likes_count"
                android:visibility="gone"
                />

        </LinearLayout>


        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <ImageView
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:background="@android:color/black"
            android:visibility="gone"/>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/view_holder_footer_image_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:src="@drawable/ic_facebook_comment" />

            <TextView
                android:id="@+id/view_holder_footer_tv_comments_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="0"
                android:textColor="#3f7ee4"
                android:textSize="15dp"
                android:visibility="gone"/>
        </LinearLayout>

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#c8c7cc"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="#140076ff"/>

</LinearLayout>