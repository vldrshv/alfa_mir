<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:orientation="vertical"
        android:id="@+id/view_holder_post_ll_upper_break"
        android:visibility="gone">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#C6C6C6"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E8E8E8"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="16dp"
            android:gravity="center">


            <ImageView
                android:id="@+id/view_holder_post_image_avatar"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/view_holder_post_tv_initials"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@android:color/white"
                android:textSize="17dp" />

        </FrameLayout>

        <LinearLayout
            android:id="@+id/view_holder_post_ll_author_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/view_holder_post_tv_author_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:paddingRight="8dp"
                android:lineSpacingExtra="4sp"
                android:textColor="#6d6d72"
                android:textSize="14sp"
                android:textStyle="normal"
                tools:text="Дружков Дмитрий Владимирович" />

            <TextView
                android:id="@+id/view_holder_post_tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:fontFamily="sans-serif-light"
                android:letterSpacing="-0.01"
                android:lineSpacingExtra="14sp"
                android:textColor="#6d6d72"
                android:textSize="14sp"
                android:textStyle="normal"
                tools:text="26 июля 2017 г." />

        </LinearLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />


        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/view_holder_post_image_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:padding="12dp"
            android:src="@drawable/ic_more"
            android:tint="@color/background_grey_dark"
            android:visibility="visible" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:id="@+id/view_holder_post_ll_department"
        android:visibility="visible">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_tag"
            android:layout_marginLeft="12dp"
            android:layout_gravity="center_vertical"
            />
        <TextView
            android:id="@+id/view_holder_post_tv_department"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_marginLeft="8dp"
            android:paddingRight="8dp"
            android:fontFamily="sans-serif-light"
            android:textStyle="normal"
            android:textColor="#ff9500"
            android:layout_gravity="center_vertical"
            android:lineSpacingExtra="10sp"
            tools:text="Новости подразделений"
            android:ellipsize="end"
            android:maxLines="1"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/view_holder_post_ll_post_body">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:fontFamily="sans-serif-medium"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="8dp"
            tools:text="Я люблю Александра Сергеевича!"
            android:letterSpacing="-0.01"
            android:lineSpacingExtra="8dp"
            android:id="@+id/view_holder_post_tv_post_title"
            android:textColor="#000000"
            android:visibility="visible"
            />

        <ImageView
            android:id="@+id/view_holder_post_image_post_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:visibility="gone" />
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/view_holder_post_tv_post_body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Hi I created a webview app for my video site. The design of the site is a hybrid that loads for mobile users. Only videos compatible with mobile devices are loaded onto the hybrid. The players are from Vk, dailymotion, youtube, quicktime. The videos only play on sdk 11 and higher but when I click on the player button to go full screen it only stops the video from playing while never launching into full screen mode. I'm including as much code as I can in hopes someone can help me. I've googled this to death with no progress made. Any help would be greatly appreciated."
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="16dp"
                android:textColor="#000000"
                android:ellipsize="end"
                android:textSize="16sp"
                android:lineSpacingExtra="6dp"
                android:letterSpacing="-0.01"
                android:maxLines="3"
                android:textAppearance="@style/OpenSans.Light"
                />
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/news_item_bottom"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:paddingRight="16dp"
            android:paddingLeft="16dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:id="@+id/view_holder_post_ll_like">

            <ImageView
                android:id="@+id/view_holder_post_image_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_facebook_like" />

            <TextView
                android:id="@+id/view_holder_post_tv_likes_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="1dp"
                android:fontFamily="sans-serif-light"
                tools:text="243"
                android:textColor="#0076ff"
                android:textSize="14dp"
                android:visibility="visible" />

        </LinearLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <ImageView
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:background="@android:color/black"
            android:visibility="gone"/>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@+id/view_holder_post_ll_comment"
            >

            <ImageView
                android:id="@+id/view_holder_post_image_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:src="@drawable/ic_facebook_comment" />

            <TextView
                android:id="@+id/view_holder_post_tv_comments_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                tools:text="0"
                android:textColor="#3f7ee4"
                android:textSize="15dp"
                android:visibility="visible"/>
        </LinearLayout>

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#96c8c7cc"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#140076ff"/>

</LinearLayout>