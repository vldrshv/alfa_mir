<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.appbar.AppBarLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:elevation="12dp">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            
            <LinearLayout
                android:id="@+id/favorite_post_fragment_toolbar_ll_toggle"
                android:layout_width="176dp"
                android:layout_height="24dp"
                android:layout_centerInParent="true"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/favorite_post_fragment_toolbar_tv_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#858585"
                    android:lineSpacingExtra="10sp"
                    android:gravity="center_horizontal"
                    android:text="коллеги"
                    android:layout_weight="1"
                    />

                <TextView
                    android:id="@+id/favorite_post_fragment_toolbar_tv_post"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#ffffff"
                    android:lineSpacingExtra="10sp"
                    android:gravity="center_horizontal"
                    android:text="статьи"
                    android:layout_weight="1"
                    />

            </LinearLayout>

            <FrameLayout
                android:id="@+id/favorite_toolbar_fl_search"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentRight="true"
                android:visibility="visible">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_search"
                    android:tint="#1875f0" />
            </FrameLayout>

        </RelativeLayout>

    </androidx.appcompat.widget.Toolbar>

</com.google.android.material.appbar.AppBarLayout>