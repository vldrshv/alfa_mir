<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        android:background="#103058"
        android:elevation="12dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:orientation="horizontal"
            android:paddingRight="8dp"
            android:paddingEnd="8dp"
            android:id="@+id/activity_absence_ll_back">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_back_caret"
                android:layout_gravity="center"
                android:layout_marginStart="12dp"
                android:layout_marginLeft="12dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:fontFamily="sans-serif-light"
                android:gravity="center"
                android:letterSpacing="-0.02"
                android:text="Назад"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:textStyle="normal" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Отсутствие"
            android:textSize="18sp"
            android:fontFamily="sans-serif-light"
            android:textStyle="normal"
            android:textColor="#ffffff"
            android:letterSpacing="-0.02"
            android:layout_gravity="center" />
    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/activity_absence_tv_intro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:fontFamily="sans-serif-light"
        android:textStyle="normal"
        android:textColor="#030303"
        android:letterSpacing="-0.02"
        android:lineSpacingExtra="6sp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="24dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        tools:text="Белозерова Антонина Ивановна будет отсутствовать :" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:background="#efeff4">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:fontFamily="sans-serif-light"
            android:textStyle="normal"
            android:textColor="#6d6d72"
            android:letterSpacing="-0.01"
            android:text="Даты"
            android:layout_marginLeft="12dp"
            android:layout_centerVertical="true" />


        <TextView
            android:layout_marginLeft="94dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="14sp"
            android:fontFamily="sans-serif-light"
            android:textStyle="normal"
            android:textColor="#6d6d72"
            android:letterSpacing="-0.01"
            android:text="Делегат"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:id="@+id/activity_absence_info_tv_delegate" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/activity_absence_info_tv_delegate"
            android:layout_marginLeft="8dp"
            android:id="@+id/activity_absence_fl_hint">

            <TextView
                android:id="@+id/activity_absence_info_tv_hint"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:textColor="#efeff4"
                android:paddingRight="1dp"
                android:gravity="center"
                android:text="\?"
                android:layout_gravity="center"
                android:background="@drawable/background_circle_blue" />

        </FrameLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/activity_absence_image_decoration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_vacation_decoration"
            android:layout_gravity="center_vertical"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/activity_absence_tv_dates"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="16sp"
            android:fontFamily="sans-serif-light"
            android:textStyle="normal"
            android:textColor="#de000000"
            android:lineSpacingExtra="8sp"
            android:text="28.08 — 10.09"
            android:gravity="center"
            android:paddingLeft="8dp" />

        <TextView
            android:id="@+id/activity_absence_tv_delegate"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="16sp"
            android:fontFamily="sans-serif-light"
            android:textStyle="normal"
            android:textColor="#007aff"
            android:lineSpacingExtra="8sp"
            tools:text="Иванов Иван Иванович"
            android:gravity="center"
            android:layout_marginLeft="40dp"
            android:ellipsize="end" />


    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e4e4e4" />

</LinearLayout>