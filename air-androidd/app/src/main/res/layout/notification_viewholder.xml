<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="104dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#efeff4"
        android:id="@+id/rc_item_notification_selected_background"
        android:visibility="gone">

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="103dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="0dp"
            >

            <FrameLayout
                android:id="@+id/rc_item_notification_fl_page_pic"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="12dp"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/rc_item_notification_image_page_background"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:scaleType="centerCrop" />


                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#7f000000"
                    android:id="@+id/rc_item_notification_fl_blur_background"
                    android:visibility="invisible"/>


                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:id="@+id/rc_item_notification_fl_profile_initials"
                    >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:id="@+id/rc_item_notification_image_page_image"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="28sp"
                        android:textColor="@android:color/white"
                        android:layout_gravity="center"
                        android:id="@+id/rc_item_notification_tv_profile_initials"/>
                </FrameLayout>

            </FrameLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/rc_item_notification_tv_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:letterSpacing="-0.01"
                    android:fontFamily="sans-serif-regular"
                    android:lineSpacingExtra="4sp"
                    android:maxLines="2"
                    tools:text="В компании рассказали, что целевая аудитория проекта — сервисы для …"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp"
                    >

                    <TextView
                        android:id="@+id/rc_item_notification_tv_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:fontFamily="sans-serif-light"
                        android:letterSpacing="-0.02"
                        android:maxLines="1"
                        tools:text="14 января"
                        android:textColor="#6d6d72"
                        android:textSize="14sp"
                        android:textStyle="normal" />



                    <TextView
                        android:id="@+id/rc_item_notification_tv_extra_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:fontFamily="sans-serif-light"
                        android:letterSpacing="-0.02"
                        android:maxLines="1"
                        tools:text=" — Alfa Future People"
                        android:textColor="#6d6d72"
                        android:textSize="14sp"
                        android:textStyle="normal" />


                </LinearLayout>

            </LinearLayout>



            <FrameLayout
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:id="@+id/rc_item_notification_fl_selected"
                android:visibility="gone"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:id="@+id/rc_item_notification_ic_select_selected"
                    android:src="@drawable/ic_selekt_selected"
                    android:visibility="gone"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:id="@+id/rc_item_notification_ic_select_unselected"
                    android:src="@drawable/ic_select_unselected"
                    />

            </FrameLayout>

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/borders_questionable"
            />

    </LinearLayout>

    <ImageView
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="6dp"
        android:src="@drawable/icn_santa_hat_28x28"

        />

</FrameLayout>